{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["src", "tests"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"nursery": {
				"noCommonJs": "error",
				"useDeprecatedReason": "error"
			},
			"style": {
				"noParameterAssign": "warn"
			},
			"suspicious": {
				"noAssignInExpressions": "warn",
				"noConsole": "error",
				"noExplicitAny": "warn"
			}
		}
	}
}
