{
	"$schema": "https://deno.land/x/deno@v1.41.0/cli/schemas/config-file.v1.json",
	"lock": false,
	"name": "@soapbox/kysely-deno-sqlite",
	"version": "2.2.0",
	"exports": "./mod.ts",
	"tasks": {
		"test": "deno test -A",
		"check": "deno check mod.ts"
	},
	"unstable": ["ffi"],
	"lint": {
		"include": ["."],
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-explicit-any"]
		}
	},
	"fmt": {
		"include": ["."],
		"useTabs": false,
		"lineWidth": 120,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
